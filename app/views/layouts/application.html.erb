<!DOCTYPE html>
<html>
<head>
  <title>myPhiDe</title>
  <%= stylesheet_link_tag :application %>
  <%= javascript_include_tag :application %>
  <%= csrf_meta_tags %>
</head>

<body>

	<div id="main" class="container_12"><!-- Body Wrapper Begin -->
		<div id="header"><!-- Header Begin -->
			<div class="grid_3"><a href="#" id="logo" class="float_left">myPhiDe</a></div>
			<div class="grid_4 push_5">

			</div>
		</div><!-- Header End -->
		<div class="clear"></div>
		<div id="userbar"><!-- Userbar Begin -->
			<div id="profile"><!-- Profile Begin -->
				<div id="avatar">
					<img src="/assets/user.png" alt="Avatar" height="44" />
				</div>
				<div id="profileinfo">
					<h3 id="username">Brian Gallagher</h3>
					<span id="subline">Administrator</span>
					<div class="clear"></div>
					<a href="#" class="profilebutton">Profile</a>
					<a href="#" class="profilebutton">Logout</a>
				</div>
			</div><!-- Userbar End -->
			<ul id="navigation"><!-- Main Navigation Begin -->
				<li <%= is_active_tab? "announcements" %>><%= link_to "Announcements", announcements_path, :class => "icon_star" %></li>
				<li <%= is_active_tab? "" %>><a href="#" class="icon_stats">My Info</a></li>
				<li <%= is_active_tab? "events" %>><%= link_to "Events", events_path ,:class => "icon_email" %></li>
				<li <%= is_active_tab? "" %>><a href="index.html" class="icon_logout">Logout</a></li>
			</ul><!-- Main Navigation End -->
		</div><!-- Userbar End -->
		<div class="clear"></div>
		<% flash.each do |name, msg| %>
      <div class="grid_12 <%= flash_name_to_class_map(name) %>">
        <h3><%= msg %></h3>
        <a class="hide_btn"> </a>
      </div>
    <% end %>
		<!-- <div class="error grid_12"><h3>Different notification messages - .error, .warning, .success, .inforamtion </h3><a href="#" class="hide_btn">&nbsp;</a></div> --><!-- Notification -->
		<div id="body">
			<%= yield %>
	  </div><!-- Body Wrapper End -->
	</div>
</body>

</html> <!-- End HTML -->


