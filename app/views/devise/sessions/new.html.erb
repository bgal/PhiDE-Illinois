<h2>Sign In</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div id="username_field">
  <%= f.email_field :email %></div>

  <div id="password_field">
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %><p style="float: right; padding-right: 130px;">Remember Me</p></div>
  <% end -%>
<div id="buttonline">
  <input type="submit" id="loginbutton" class="float_left width_4" value="Login"><% f.submit %>

<% end %>

<div class="passforgot" style="float: right;">
<%= render :partial => "devise/shared/links" %>
</div>

</div><!-- End Buttonline -->
