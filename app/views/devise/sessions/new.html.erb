<h2>Sign In</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div id="username_field">
  <%= f.email_field :email, :placeholder => 'Email' %></div>

  <div id="password_field" class="login-form">
  <%= f.password_field :password, :placeholder => 'Password' %></div><br />

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %><p style="float: right; padding-right: 150px;">Remember Me</p></div>
  <% end -%>
<div id="buttonline">
  <input type="submit" id="loginbutton" class="float_left width_4" value="Login"><% f.submit %><br /><br /><br />

<% end %>


<%= render :partial => "devise/shared/links" %>


</div><!-- End Buttonline -->
