<style>
#loginbox #password_field {
  margin:0;
}
</style>
<h2>Sign Up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div id="username_field">
  <%= f.email_field :email, :placeholder => 'Email' %></div>

  <div id="username_field">
  <%= f.text_field :name, :placeholder => 'Name' %></div>

  <div id="password_field">
  <%= f.password_field :password, :placeholder => 'Password' %></div>

  <div id="password_field">
  <%= f.password_field :password_confirmation, :placeholder => 'Confirm Password' %></div>
  
  <div id="username_field">
  <%= f.text_field :access_code, :placeholder => 'Access Code' %></div>

<div id="buttonline">
  <input type="submit" id="loginbutton" class="float_left width_4" value="Sign Up"><% f.submit %>
</div>

<% end %>


