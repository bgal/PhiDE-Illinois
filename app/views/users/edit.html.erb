<%= generate_block @user.email do %>
  <h2><%= @user.name %></h2>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_tag(update_user_path, :method => :put, :class => "form" ) do %>
    <div class="field">
      <%= label_tag :admin %>
      <%= check_box_tag :admin, nil, @user.admin? %>
    </div>
    <div class="field">
      <%= label_tag :hours %><br />
      <%= text_field_tag :hours, @user.hours, :class => "input" %>
    </div>
	<div class="field">
      <%= label_tag :mandatory_events %><br />
      <%= text_field_tag :mandatory_events, @user.mandatory_events, :class => "input" %>
    </div>
    <br />
    <br />
    <div class="actions">
      <%= submit_tag "Update Member", :class => "input", :style => "padding:0px;padding-left:5px;padding-right:5px" %>
    </div>
  <% end %>
<% end %>
